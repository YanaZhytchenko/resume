<main>

  {{#with navigation}}
    <section>
    <div class="row col-12">
      <div class="card">
      <div class="nav">
      {{#each links}}
      <div class="nav-item">
      <a href="{{href}}" class="nav-link">{{text}}</a>
      </div> 
      {{/each}}
      </div>
      </div>
      </div>
      </section>
  {{/with}} 


  <div class="row">

  
  {{#with formBlock}}
   <div class="col-8">
   <h1 class="py-3">{{header}}</h1>
   {{#with rating}}
      {{title}} :
      {{value}}
   {{/with}}
   <br>
  
   
   {{#with actionBlock}}
   <br>
    <div class="col-8">
    <div class="nav nav-tabs m-2"> 
    {{#each tabs}}
    <div class="nav-item">
      {{#if isActive includeZero=true}}
    <a href="#" class="nav-link  active">{{text}}</a>
    {{else}}
    <a href="#" class="nav-link">{{text}}</a>
    {{/if}}
    </div>
    {{/each}}
    </div>
    </div>
      
    
    
    <hr>
     
    <div class="card">
    <div class="card-body">
    {{#with report}}
      {{title}}
      {{#with button}}
        <p><a class="btn btn-secondary my-2 p-2" href="{{link}}">{{text}}</a></p>
      {{/with}}
    {{/with}}
    </div>
    </div>
   {{/with}}
     
   <hr>

     
    {{#with feedbackBlock}}
    <div class="row"> 
      <h4>{{title}}</h4>
        {{#each buttons}}
        <div class="col-4">
           <p><button class="btn {{#if isWarning}} btn-warning {{/if}} 
          {{#if isSuccess}} btn-success {{/if}}
				  {{#if isDanger}} btn-danger{{/if}} col my-3 p-3">{{text}}</button></p>
          </div>
        {{/each}} 
        </div>
    {{/with}}
   
    </div>
    
    <div class="col-4 ">
    {{#with goodsInfo}}
      <div class="card">
      <div class="card-body p-3">
      <img class="col-2" src="{{photo}}">
      <p class="h2">{{name}}</p>
      </div>
      </div>

      <br>
      <div class="card">
      <div class="card-body p-3">
      <b>{{price}}</b>
      <br>

      <p class="{{#if inMarket}} btn-primary {{/if}}">Є в наявності</p>
      {{#each buttons}}
      <p><button class="btn {{#if isPrimary}} btn-primary {{/if}} 
				{{#if isSecondary}} btn-secondary {{/if}}">{{text}}</button></p>
      {{/each}}
      </div>
      </div>


       <br>
      <div class="card">
      <div class="card-body p-3">
      {{#with seller}}
        {{title}} :
        <b>{{value}}</b>
      {{/with}}
      </div>
      </div>

    {{/with}}
    </div>

    
  {{/with}}

  </div>

  <hr>

  {{> reviewItem}}


  <div class="card-body card text-bg-success text-center p-2 m-1">
  {{#with service}}
    <h2>{{title}}</h2>
    <p class="p-2">{{description}}</p>
    {{#each buttons}}
      <p><a class="btn btn-primary" href="{{link}}">{{text}}</a></p>
    {{/each}}
  {{/with}}
  </div>
 


  
  <hr>


  <section>
  <div class="row col-12">
  {{#each footer}} 
  {{#each this}}
    <div class="col-3">
    <div>
    <a class="btn btn-link text-link" href="{{link}}">{{text}}</a>
    </div>
    </div>
  {{/each}}
  {{/each}}
  </div>
  </section>

</main>