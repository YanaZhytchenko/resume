<main>

  {{#with navigation}}
    <section>
    <div class="row col-12">
      <div class="card">
      <div class="nav">
      {{#each links}}
      <div class="nav-item">
      <a href="{{href}}" class="nav-link">{{text}}</a>
      </div> 
      {{/each}}
      </div>
      </div>
      </div>
      </section>
  {{/with}} 


  <h1 class="py-3">{{header}}</h1>


  {{#with purchase}}
    <section>
    <div class="row col-12">
    <div class="nav nav-tabs"> 
    {{#each tabs}}
    <div class="nav-item">
     <a href="#" class="nav-link active">{{this}}</a>
    </div>
    {{/each}}
    </div>
    </div>
    </section>

      <div class="row">
    {{#with actionBlock}}
    
      <div class="col-4">
       <input class="form-control" placeholder={{input.placeholder}}>
      </div>

      {{#each buttons}}
       <button class="btn {{#if isSuccess}} btn-success {{/if}} 
       {{#if isOutline}} btn-outline-success {{/if}}
				{{#if isDanger}} btn-outline-danger{{/if}} col  m-2">{{text}}</button>
      {{/each}}
      
    {{/with}}
    </div> 

    {{> purchaseItem}}

  {{/with}}
  <hr>
  <br>
  <hr>

  {{#with userInfo}}
    <br>
    <h2>{{title}}</h2>
    <br>
   
    <div class="card">
    <div class="card-body">
    
    {{#with profileData}}
   
      <h4>{{title}}</h4>
      <div class="col-12">
      <div class="card">
      <div class="card-body">
      {{#with fullName}}
       <div class="row">
        <div class="col-4">
          {{#with surname}}
            <p class="h6">{{title}}</p>
            <p>{{value}}</p>
          {{/with}}
        </div>
        
        <div class="col-4">
          {{#with name}}
            <p class="h6">{{title}}</p>
            <p>{{value}}</p>
          {{/with}}
        </div>
        
        <div class="col-4">
          {{#with middleName}}
           <p class="h6">{{title}}</p>
            <p>{{value}}</p>
          {{/with}}
        </div>
       </div>
      {{/with}}
      </div>
      </div>
      </div>

      <br>

     <div class="card">
     <div class="card-body">
      {{#with otherInfo}}
       <div class="row">
         <div class="col-4">
        {{#with birthday}}
          <p class="h6">{{title}}</p>
          <p>{{value}}</p>
        {{/with}}
        </div>

        <div class="col-4">
        {{#with sex}}
          <p class="h6">{{title}}</p>
          <p>{{value}}</p>
        {{/with}}
        </div>
         
        <div class="col-4">
        {{#with language}}
          <p class="h6">{{title}}</p>
          <p>{{value}}</p>
        {{/with}}
        </div>
       </div>
      {{/with}}
      </div>
      </div>
      
     
    {{/with}}
   
   
    <br>
   
    <div class="card">
    <div class="card-body"> 
    <div class="row">
    
    {{#each buttons}}
    <div class="col-4">
       <button class="btn {{#if isPrimary}} btn-primary {{/if}} 
       {{#if isSecondary}} btn-outline-secondary {{/if}}
				{{#if isDanger}} btn-outline-danger{{/if}} col gy-4 gx-1 ">{{text}}</button>
    </div>
    {{/each}}
    
    </div>
    </div>
    </div>

    </div>
    </div>
    


    <br>

    <div class="card">
    <div class="card-body">
    {{#with recipients}}
      <h3>{{title}}</h3>
      <div class="row">
      {{#each users}}
        <div class="col-5">
        <div class="card">
        <div class="card-body p-3">
        <h6>{{name}}</h6>
        <p>{{phone}}</p>
        {{#with button}}
          <p><a class="btn btn-primary" href="{{link}}">{{text}}</a></p>
        {{/with}}
        </div>
        </div>
        </div>
      {{/each}}
     </div>
    {{/with}}
    </div>
    </div>


    <br>

    <div class="card">
    <div class="card-body p-3">
    {{#with contacts}}
      <h3>{{title}}</h3>
      <div class="row">
      {{#each contactData}} 
      <div class="col-4">
       <div class="card">
       <div class="card-body p-2 m-1">
        <p class="h6">{{title}}</p>
        {{value}}

        {{#with button}}
          <p><button class="btn {{#if isPrimary}} btn-primary {{/if}} 
       {{#if isSecondary}} btn-outline-secondary {{/if}}
				{{#if isDanger}} btn-outline-danger{{/if}} col mx-1 my-2">{{text}}</button></p>
        {{/with}}

       </div>
       </div>
       </div>
      {{/each}}
      </div>

    {{/with}}
    </div>
    </div>

  {{/with}}



  <br>
  <hr>


  <section>
  <div class="row col-12">
  {{#each footer}} 
  {{#each this}}
    <div class="col-3">
    <div>
    <a class="btn btn-link text-link" href="{{link}}">{{text}}</a>
    </div>
    </div>
  {{/each}}
  {{/each}}
  </div>
  </section>

</main>